<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Hangout Timer">
    <Require feature="rpc" />
    <Require feature="views" />
    <Require feature="locked-domain" />
  </ModulePrefs>
  <Content type="html">
<![CDATA[
<html>
  <head>
    <style type="text/css">
    </style>
  </head>
  <body>

    <h3>USC Debate Timer</h3>
    
    <label for="debate-type">Debate type:</label>
    <select id="debate-type">
      <option value="highschool" selected>High School Policy</option>
      <option value="college">College Policy</option>
      <option value="british">British Parliamentary</option>
    </select>

    <label for="debate-time-options">Set Debate Timer To:</label>
    <div id="debate-time-options">
    </div>

    <p>Clicking on the timer display will allow you enter a custom time.</p>

    <h4>Debate Timer</h4>
    <input type="text" id="timer-1" value="08:00" />

    <div id="buttons">
      <button id="start">Start</button>
      <button id="reset">Reset timer</button>
    </div>
    <p id="message"></p>

    <h4>Prep Timer</h4> <a href="#" id="hide-prep">Hide</a>
    <div id="prep-timer">
      <p>Select the timer to enter or modify the time.</p>

      <div id="team-a">
        <h5>Team A</h5>
        <input type="text" id="timer-a" value="00:00" />
        <button id="start-a">Start</button>
      </div>

      <div id="team-b">
        <h5>Team B</h5>
        <input type="text" id="timer-b" value="00:00" />
        <button id="start-b">Start</button>
      </div>
    </div>
    
    <canvas id="img" width="640" height="360" style="display:none;"></canvas>

    <script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
    <script src="//ca.ios.ba/files/the-jibe/timer/src/loader.js"></script>

  </body>
</html>
]]>
  </Content>
</Module>
